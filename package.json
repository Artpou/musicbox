    "prettier": "^3.0.0",
    "turbo": "^2.3.3",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "packageManager": "bun@1.1.7",
  "dependencies": {
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "bcrypt": "^5.1.1",
    "passport": "^0.7.0",
