{
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false
    },
    "test:ci": {
      "cache": false
    }
  },
  "remoteCache": {
    "signature": true
  },
  "globalEnv": ["NODE_ENV", "JWT_SECRET", "JWT_REFRESH_SECRET"]
}
